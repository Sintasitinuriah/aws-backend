{
  "overrides": [
    {
      "files": ["**/*.js"],
      "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
      },
      "env": {
        "browser": true,
        "es2021": true,
        "node": true
      },
      "globals": {
        "global": "readonly",
        "process": "readonly"
      },
      "extends": [
        "eslint:recommended",
        "airbnb-base"
      ],
      "rules": {
        "indent": ["error", 2],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-console": "off"
      }
    }
  ]
}
